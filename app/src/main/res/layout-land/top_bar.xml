<?xml version="1.0" encoding="utf-8"?>
<com.example.phoenixtree.view.topBar.CustomTopBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="48dp"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_gravity="left"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"

    android:id="@+id/top_bar"
    android:elevation="4dp"
    android:weightSum="3">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/btn_player_control_pre"
        android:src="@drawable/ic_skip_previous_white_24px"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/btn_player_control_play"
        android:src="@drawable/ic_play_arrow_white_24px"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_player_control_next"
        android:src="@drawable/ic_skip_next_white_24px"/>

</com.example.phoenixtree.view.topBar.CustomTopBar>
