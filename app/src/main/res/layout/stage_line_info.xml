<?xml version="1.0" encoding="utf-8"?>
<com.example.phoenixtree.util.composeRecyclerView.StageLineInfoCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <ImageView
        android:id="@+id/stage_line_avatar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:contentDescription="@string/stage_play_info_poster"
        card_view:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/stage_line_dialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.example.phoenixtree.util.composeRecyclerView.StageLineInfoCardView>
